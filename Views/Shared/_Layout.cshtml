@{ 
    // Layout is a .cshtml file that is used to provide
    // common structure to other views.
    // RenderBody method is used inside layout file
    // to provide space for other view.
    // Only one RenderBody method can be used in one layout.
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Tutorial</title>

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    </environment>
    <link href="~/css/Site.css" rel="stylesheet" />
</head>
<body>
    <header class="header text-muted text-center border-bottom">
        <nav class="navbar navbar-expand-sm">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.png" width="30" height="30" asp-append-version="true"/>
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Welcome</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="RazorViewEngine">Razor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Book" asp-action="GetAllBooksFromRepository">Books</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-protocol="https" asp-host="game-pit.web.app" asp-controller="Morz" asp-action="morse">Morse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="AboutUs">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="ContactUs">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        <h1 class="text-center">@ViewData["Title"]</h1>
        @RenderBody()
    </main>

    <footer class="footer text-muted text-center border-top">
        <div class="container">
            Copyright &copy; Tutorial @DateTime.Now.Year
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/jquery.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
    </environment>
    @{ 
        // RenderSection is a space with specific
        // name and it used on Layout file.
        // It tells the application that some other
        // code will be placed there.
        // To make the section optional, (it may not
        // be needed in all views) make required false.
    }
    @RenderSection("scripts", false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>
